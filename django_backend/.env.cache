# Redis Cache Configuration for Local Development
# Copy this file to .env.dev or merge with your existing environment file

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Environment Settings
RAILWAY_ENVIRONMENT=development

# Django Cache Settings (optional - these are set automatically)
# CACHE_TIMEOUT=300
# CACHE_KEY_PREFIX=tunemeld_dev

# Debug Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database URLs (if using database alongside cache)
# MONGO_URI=your-mongo-connection-string
# MONGO_DB_NAME=tunemeld_dev

# For testing different Redis configurations
# REDIS_URL=redis://localhost:6379/1  # Use different database
# REDIS_URL=redis://username:password@localhost:6379/0  # With auth
