# Staging Environment Configuration
DATABASE_URL=sqlite:///staging.db
DJANGO_SECRET_KEY=staging-secret-key-change-in-production
RAILWAY_ENVIRONMENT=staging

# Spotify credentials (use test/dev credentials for staging)
SPOTIFY_CLIENT_ID=your_staging_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_staging_spotify_client_secret

# MongoDB (for cache - can use local instance)
MONGO_URI=mongodb://localhost:27017/tunemeld_staging

# RapidAPI - Use dummy key to avoid real API calls in staging
X_RAPIDAPI_KEY=dummy_key_for_staging

# Enable staging mode to skip actual API calls
STAGING_MODE=true
