{
  "outputDirectory": "frontend/dist",
  "buildCommand": "npm run build",
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python@4.3.1"
    },
    "api/hello.py": {
      "runtime": "@vercel/python@4.3.1"
    }
  },
  "rewrites": [
    { "source": "/gql/(.*)", "destination": "/api/index" },
    { "source": "/api/hello", "destination": "/api/hello" },
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/admin/(.*)", "destination": "/api/index" }
  ]
}
