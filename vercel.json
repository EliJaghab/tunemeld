{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(health|gql)/.*",
      "dest": "api/index.py"
    },
    {
      "src": "/css/(.*)",
      "dest": "/frontend/dist/css/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/frontend/dist/images/$1"
    },
    {
      "src": "/html/(.*)",
      "dest": "/frontend/dist/html/$1"
    },
    {
      "src": "/(main|themeInit|tosPrivacy)\\.js$",
      "dest": "/frontend/dist/$1.js"
    },
    {
      "src": "/components/(.*)",
      "dest": "/frontend/dist/components/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/favicon.ico",
      "dest": "/frontend/dist/images/favicon.ico"
    },
    {
      "src": "^/$",
      "dest": "/frontend/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}
