{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "api/django_app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/gql/(.*)",
      "dest": "/api/django_app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/django_app.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/api/django_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "backend.core.settings",
    "PYTHONPATH": "/var/task"
  }
}
