{
  "outputDirectory": "frontend/dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/gql/(.*)?",
      "dest": "/api/main.py"
    },
    {
      "src": "/graphql/(.*)?",
      "dest": "/api/main.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}
